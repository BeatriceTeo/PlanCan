<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3F6B6"
    tools:context=".SearchByMonthFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Select the month you want to start the garden"
        android:textColor="#2A4C2A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToJan"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:onClick="SearchByMonthSelFun"
        android:text="Jan"
        app:layout_constraintEnd_toStartOf="@+id/goToFeb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/goToFeb"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:onClick="SearchByMonthSelFun"
        android:text="Feb"
        app:layout_constraintEnd_toStartOf="@+id/goToMar"
        app:layout_constraintStart_toEndOf="@+id/goToJan"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/goToMar"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:onClick="SearchByMonthSelFun"
        android:text="Mar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/goToFeb"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/goToApr"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Apr"
        app:layout_constraintEnd_toStartOf="@+id/goToMay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToJan" />

    <Button
        android:id="@+id/goToMay"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="May"
        app:layout_constraintEnd_toStartOf="@+id/goToJun"
        app:layout_constraintStart_toEndOf="@+id/goToApr"
        app:layout_constraintTop_toBottomOf="@+id/goToFeb" />

    <Button
        android:id="@+id/goToJun"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Jun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/goToMay"
        app:layout_constraintTop_toBottomOf="@+id/goToMar" />

    <Button
        android:id="@+id/goToJul"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Jul"
        app:layout_constraintEnd_toStartOf="@+id/goToAug"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToApr" />

    <Button
        android:id="@+id/goToAug"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Aug"
        app:layout_constraintEnd_toStartOf="@+id/goToSep"
        app:layout_constraintStart_toEndOf="@+id/goToJul"
        app:layout_constraintTop_toBottomOf="@+id/goToMay" />

    <Button
        android:id="@+id/goToSep"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Sep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToAug"
        app:layout_constraintTop_toBottomOf="@+id/goToJun" />

    <Button
        android:id="@+id/goToOct"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Oct"
        app:layout_constraintEnd_toStartOf="@+id/goToNov"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToJul" />

    <Button
        android:id="@+id/goToNov"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Nov"
        app:layout_constraintEnd_toStartOf="@+id/goToDec"
        app:layout_constraintStart_toEndOf="@+id/goToOct"
        app:layout_constraintTop_toBottomOf="@+id/goToAug" />

    <Button
        android:id="@+id/goToDec"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Dec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToNov"
        app:layout_constraintTop_toBottomOf="@+id/goToSep" />

</androidx.constraintlayout.widget.ConstraintLayout>